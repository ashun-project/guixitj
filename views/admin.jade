    body
        div.form-cont
            label(for="") 类型：
            select(name="", id="list-type")
                option(value="trade") 成交记录
                option(value="life") 农家生活
                option(value="news") 站内新闻
        div.form-cont.form-title
            label(for="") 标题：
            input(id="title", type="text")
        div.form-cont.form-depict
            label(for="") 描述：
            input(id="depict", type="text")
        div.form-cont.form-amount
            label(for="") 数量：
            input(id="amount", type="number")
        form(enctype="multipart/form-data", id="uploadImg")
            | 上传文件:  
            input(name="file", type="file", id="file", accept="image/gif,image/jpeg,image/jpg,image/png,image/svg")
        textarea(name="comment", id="editor")
        button(id="saveData") 保存
        script.
            var editor = new Simditor({
                toolbar: [
                    'title', 'bold', 'italic', 'underline', 'strikethrough', 'fontScale',
                    'color', '|', 'ol', 'ul', 'blockquote', 'code', 'table', '|', 'link',
                    'image', 'hr', '|', 'alignment'
                ],
                textarea: '#editor',
                placeholder: '写点什么...',
                // defaultImage: '/static/home/images/logo.png',
                imageButton: ['upload'],
                upload: {
                    url: '/upload',
                    params: {_token: ''},
                    fileKey: 'file',
                    leaveConfirm: '正在上传文件..',
                    connectionCount: 3
                }
            });
            var logo = '';
            $('#uploadImg input[type="file"]').on('change', function(){
                var file = this.files[0];
                var formData = new FormData();
                var fileName = file.name;    
                var file_typename = fileName.toString().substring(fileName.lastIndexOf('.'), fileName.length);    
                formData.append('file', file);
                if (file_typename !== '.jpg' && file_typename !== '.gif' && file_typename !== '.png') {
                    alert('请选择图片文件')
                    return;
                }
                if (file.size > 300 * 1024) {
                    alert('图片不能大于300KB')
                    return;
                }
                $.ajax({
                    url: '/upload',
                    type: 'POST',
                    cache: false,
                    data: formData,
                    //dataType: 'json',
                    //async: false,
                    processData: false,    //不需要对数据做任何预处理
                    contentType: false,    //不设置数据格式
                }).done(function(res) {
                    if (res &&  res.file_src) {
                        logo = res.file_src
                    } else {
                        alert('上传失败');
                    }
                }).fail(function(res) {
                    console.log(res)
                    alert('上传失败');
                });
            })
            $('#saveData').click(function() {
                //- var txt = editor.getValue();
                var err = '';
                var obj = {
                    type: $('#list-type').val() || 'trade',
                    title: $('#title').val(),
                    amount: $('#amount').val(),
                    depict: $('#depict').val(),
                    logo: logo
                }
                if (obj.type !== 'trade') {
                    delete obj.amount;
                    delete obj.depict;
                    if (obj.type == 'news') {
                        delete obj.logo;
                    }
                }
                obj.imgs = getImg(obj);
                obj.cont = editor.getValue();
                for(var key in obj) {
                    if(!obj[key]) {
                        err = '请填写完内容'
                    }
                }
                if (obj.title.length > 50) {
                    err = '标题内容太长'
                }
                if (obj.depict && obj.depict.length > 50) {
                    err = '描述内容太长'
                }
                if (!err) {
                    $.ajax({
                        url: '/insertIntoDataList',
                        type: 'POST',
                        dataType: 'JSON',
                        contentType: 'application/json',
                        data: JSON.stringify(obj),
                        success: function (result) {
                            if (result.err) {
                                alert(result.err);
                            } else {
                                alert('保存成功');
                                window.location.reload();
                            }
                        },
                        error: function() {
                            alert('保存失败');
                        }
                    })
                } else {
                    alert(err)
                }
            });
            function getImg(obj) {
                var imgs = $('.simditor-body').find('img');
                var arr = [];
                $('.simditor-body br').remove();
                for (var i = 0; i < imgs.length; i++) {
                    $(imgs[i]).attr('alt', obj.title);
                    arr.push($(imgs[i]).attr('file-src'))
                }
                if (obj.logo) {
                    arr.push(obj.logo)
                }
                return arr;
            }
            $('#list-type').change(function() {
                var value = $('#list-type').val();
                if(value == 'trade') {
                    $('.form-depict').show();
                    $('.form-amount').show();
                    $('#uploadImg').show();
                } else if(value == 'life') {
                    $('.form-amount').hide();
                    $('.form-depict').hide();
                    $('#uploadImg').show();
                } else {
                    $('.form-amount').hide();
                    $('.form-depict').hide();
                    $('#uploadImg').hide();
                }
            })